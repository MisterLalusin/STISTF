<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ef0261ef"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Get A Schedule For Accounting Lessons"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Tagapasok_1Etx_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="65dp"
        android:fontFamily="monospace"
        android:hint="Student Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Choose Instructor"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/Tagapasok_1Btn_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Tagapasok_1Btn_Id"
            android:layout_centerHorizontal="true"
            android:onClick="gehtignanmoulet"
            android:text="View All Pending Request" />

        <Button
            android:id="@+id/Tagapasok_1Btn_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="hanapngbagogawinmo"
            android:text="Submit Request" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Tagapasok_1Rdo_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="May Deodoro" />

            <RadioButton
                android:id="@+id/Tagapasok_2Rdo_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Czherry Reyes" />

            <RadioButton
                android:id="@+id/Tagapasok_3Rdo_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Randolph Millagracia" />
        </RadioGroup>
    </RelativeLayout>


</LinearLayout>
