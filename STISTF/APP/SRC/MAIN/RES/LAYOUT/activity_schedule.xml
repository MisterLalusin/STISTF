<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lab1pc19.sti_stf.Schedule"
    android:background="#ef0261ef">

    <RelativeLayout
        android:layout_width="464dp"
        android:layout_height="759dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnAlgebra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnAccounting"
            android:layout_alignEnd="@+id/btnAccounting"
            android:layout_alignStart="@+id/btnAccounting"
            android:layout_marginBottom="21dp"
            android:background="@drawable/drawbutton"
            android:text="Algebra"
            android:textColor="@color/colorPrimary"
            android:onClick="algebra"/>

        <Button
            android:id="@+id/btnAccounting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnCalculus"
            android:layout_alignStart="@+id/btnCalculus"
            android:layout_centerVertical="true"
            android:background="@drawable/drawbutton"
            android:text="Accounting"
            android:textColor="@color/colorPrimary"
            android:onClick="accounting"/>

        <Button
            android:id="@+id/btnCalculus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnPhysics"
            android:layout_alignEnd="@+id/btnPhysics"
            android:layout_alignStart="@+id/btnPhysics"
            android:layout_marginBottom="24dp"
            android:background="@drawable/drawbutton"
            android:text="Calculus"
            android:textColor="@color/colorPrimary"
            android:onClick="calculus"/>

        <Button
            android:id="@+id/btnProbStat"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="117dp"
            android:background="@drawable/drawbutton"
            android:text="Probability and Statistics"
            android:textColor="@color/colorPrimary"
            android:onClick="probstat"/>

        <Button
            android:id="@+id/btnPhysics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnProbStat"
            android:layout_alignEnd="@+id/btnProbStat"
            android:layout_alignStart="@+id/btnProbStat"
            android:layout_marginBottom="22dp"
            android:background="@drawable/drawbutton"
            android:text="Physics"
            android:onClick="physics"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txtSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="133dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Subjects"
            android:textColor="@color/ic_launcher_background"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            app:srcCompat="@mipmap/ic_sub" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
