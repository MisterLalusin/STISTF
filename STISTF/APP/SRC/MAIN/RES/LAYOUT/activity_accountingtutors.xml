<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/Tagapasok_1Btn_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup2"
        android:layout_marginStart="38dp"
        android:onClick="gehtignanmoulet"
        android:text="View Request" />


    <EditText
        android:id="@+id/Tagapasok_1Etx_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@+id/radioGroup2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="102dp"
        android:hint="Enter The Request Id" />

    <Button
        android:id="@+id/Tagapasok_1Btn_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/Tagapasok_1Etx_Id"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="27dp"
        android:onClick="humanapngpamalitgawinmo"
        android:text="Respond" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Tagapasok_1Btn_Id"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:paddingTop="-100dp">

        <RadioButton
            android:id="@+id/Tagapasok_1Rdo_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Be ready for the comming tuturial" />

        <RadioButton
            android:id="@+id/Tagapasok_2Rdo_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sorry The Teacher Is not Available" />
    </RadioGroup>

</RelativeLayout>
